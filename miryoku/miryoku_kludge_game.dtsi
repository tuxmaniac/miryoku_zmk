#define MIRYOKU_KLUDGE_GAME_TERM 200
#define MIRYOKU_KLUDGE_GAME_MACRO(LAYER, POSITION, BINDING) \
gamecombos_ ## LAYER ## _ ## POSITION { \
  layers = <LAYER>; \
  key-positions = <MIRYOKU_KLUDGE_GAME_ ## POSITION>; \
  bindings = <BINDING>; \
  timeout-ms = <MIRYOKU_KLUDGE_GAME_TERM>; \
};

/ {
  combos {
    compatible = "zmk,combos";
    MIRYOKU_KLUDGE_GAME_MACRO(U_GAME, T, &kp T)
  };
};
